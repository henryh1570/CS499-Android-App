<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Title" />
    <EditText
        android:id="@+id/dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:hint="Description"/>
    <Spinner
        android:spinnerMode="dialog"
        android:prompt="@+string/prompt_type"
        android:id="@+id/dialog_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/importanceTypes">
    </Spinner>

    <Spinner
        android:spinnerMode="dialog"
        android:prompt="@+string/prompt_importance"
        android:id="@+id/dialog_importance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/importanceValues">
    </Spinner>
</LinearLayout>